<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/radius_corners</item>
    </style>

    <style name="TextTitleHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
    </style>

    <style name="StyleTitleHeader">
        <item name="android:textAppearance">@style/TextTitleHeader</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">@color/regular_text_color</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="StyleIngredientText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/regular_text_color</item>
    </style>

    <style name="StyleIngredientTitleText">
        <item name="android:textAppearance">@style/StyleIngredientText</item>
        <item name="android:textAllCaps">true</item>
    </style>



</resources>